{
  "manifest_version": 2,
  "name": "Khan Academy",
  "description": "UbiCoS",
  "version": "0.1",
  "permissions":["storage"],
  "background": {
    "scripts": ["jquery-2.1.3.min.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": [
         "*://*.khanacademy.org/*"
      ],
      "run_at": "document_idle",
      "js": ["jquery-2.1.3.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
